        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.681" />

    <View
        android:id="@+id/verticalRect2"
        android:layout_width="10dp"
        android:layout_height="136dp"
        android:background="@android:color/black"
